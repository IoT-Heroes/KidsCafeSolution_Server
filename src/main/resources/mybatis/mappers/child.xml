<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="child">

	<select id="selectListByParentKey" resultType="childvo">
		SELECT
		ID,
		USER_ID USERID,
		NAME,
		TARGET_ACTIVITY_FIGURE TARGETACTIVITYFIGURE,
		AGE,
		HEIGHT,
		WEIGHT,
		SEX,
		IS_BAND_WEARING ISBANDWEARING
		FROM K_CHILD
		WHERE 1 = 1
		<if test="parentId != ''">
		  <![CDATA[	
	  		AND   USER_ID = #{userId}
		  	]]>
		</if>
	</select>

	<insert id="insertChild">
		<![CDATA[
			INSERT INTO K_CHILD 
				(ID,USER_ID,NAME,TARGET_ACTIVITY_FIGURE,AGE,HEIGHT,WEIGHT,SEX) 
			VALUES 
				(#{id},	#{userId}, #{name}, #{targetActivityFigure}, #{age}, #{height}, #{weight}, #{sex}) 
		]]>
	</insert>

</mapper>